<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/profile_background">

    <TextView
        android:id="@+id/title_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="50sp"
        android:textColor="@color/dark_green"
        android:fontFamily="@font/aovelsansrounded_rddl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <TextView
        android:id="@+id/textViewStatisticsMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_statistics"
        android:layout_marginTop="250dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/shape_1"
        android:textSize="20sp"
        android:fontFamily="@font/aovelsansrounded_rddl"
        android:textColor="@color/dark_green"
        android:text="You don't have any journey yet!\nStart new journey"/>

    <Button
        android:id="@+id/buttonStatisticsNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewStatisticsMessage"
        android:text="NOW"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:id="@+id/scrollViewStatistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_statistics"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutBasicStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_1"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:textSize="14sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewStatisticsMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="January"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewNumOfJourneysMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of yourneys: "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewTotalDurationMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total duration of journeys: "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewTotalDistanceMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total distance traveled:  "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewAvgDurationMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg duration of journeys:  "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewAvgDistanceMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:text="Avg distance traveled: "
                    android:textColor="@color/dark_green"
                    android:textSize="16sp" />


            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerStatistics"
                android:layout_width="match_parent"
                android:layout_height="600dp" />

            <LinearLayout
                android:id="@+id/linearLayoutBasicStatistics2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shape_1"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textSize="14sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewStatisticsYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-bold"
                    android:textColor="@color/dark_green"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewNumOfJourneysYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of yourneys: "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewTotalDurationYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total duration of journeys: "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewTotalDistanceYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total distance traveled:  "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewAvgDurationYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average duration of journeys:  "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/textViewAvgDistanceYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average distance traveled:  "
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"/>


            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerStatistics2"
                android:layout_width="match_parent"
                android:layout_height="600dp" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>