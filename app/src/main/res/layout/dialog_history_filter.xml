<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonExitFilter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:layout_marginEnd="50dp"
            android:text="Close"
            android:textColor="@color/dark_green"/>

        <Button
            android:id="@+id/buttonResetFilter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:layout_marginStart="50dp"
            android:text="Reset"
            android:textColor="@color/dark_green"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:text="Start date:"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewStartDate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:gravity="start | center"
            android:textSize="20sp"
            android:hint="Start date"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/imageButtonPickStartDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.6"
            android:padding="15dp"
            android:src="@drawable/calendar_icon"
            android:scaleType="centerInside"
            android:background="@drawable/shape_1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:text="End\ndate:"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewEndDate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:gravity="start | center"
            android:textSize="20sp"
            android:hint="End date"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/imageButtonPickEndDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="0.6"
            android:padding="15dp"
            android:src="@drawable/calendar_icon"
            android:scaleType="centerInside"
            android:background="@drawable/shape_1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Distance:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="From:"
            android:gravity="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextDistanceFrom"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxEms="5"
            android:hint="3.5"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="km"
            android:gravity="center_horizontal | start"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="To:"
            android:gravity="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextDistanceTo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxEms="5"
            android:hint="3.5"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="km"
            android:gravity="center_horizontal | start"
            android:textColor="@color/black"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Duration:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="From:"
            android:gravity="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextDurationFrom"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxEms="5"
            android:hint="3.5"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="min"
            android:gravity="center_horizontal | start"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="To:"
            android:gravity="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextDurationTo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxEms="5"
            android:hint="3.5"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="min"
            android:gravity="center_horizontal | start"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/imageButtonSubmitFilter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:padding="10dp"
            android:src="@drawable/filter_icon"
            android:scaleType="centerInside"
            android:background="@drawable/shape_1"/>

    </LinearLayout>

</LinearLayout>